import requests
import urllib
import re

class Downloader():
	'''
	Class to retrieve HTML code from a specific page
	'''
	
	def __init__(self,url):
		self.url = url
		self.contents = ''

	def download(self):
		browser = urllib.urlopen(self.url)
		response = browser.getcode()
		if response != 200:
			self.contents = browser.read()

#inherit from Downloader class.
class eatYourBooksParser(Downloader):
	'''
	Class for parsing eatyourbooks.com
	'''
	def get_recipe(self):
		try:
			recipeLink=re.search("http://eatyourbooks.com".group(1)
			#recipeId=int(recipeLink)
		except:
			recipeId=-1

class page:
	url='empty'
	parents=[]
	children=[]
	is_visited=0

	def getPage(self):
		r=requests.get(self.url);
		contents=r.text
		contents=contents.encode('utf-8')
		f=open('myfile.txt','w')
		f.write(contents)

rootUrl=page()
rootUrl.url='http://www.eatyourbooks.com/recipes/indian/recipes'
rootUrl.getPage()
